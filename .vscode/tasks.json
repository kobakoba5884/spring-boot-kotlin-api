{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "task",
      "type": "shell",
      "command": "gradle",
      "args": ["${input:taskName}"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/backend/${input:projectName}"
      }
    }
  ],
  // https://code.visualstudio.com/docs/editor/variables-reference
  "inputs": [
    {
      "type": "pickString",
      "id": "taskName",
      "description": "What do you wanna do?",
      "options": ["build", "clean", "bootRun"],
      "default": "build"
    },
    {
      "type": "pickString",
      "id": "projectName",
      "description": "What is the name of the project?",
      "options": ["hello-world-api", "author-api", "book-api", "comment-api"],
      "default": "hello-world-api"
    }
  ]
}
